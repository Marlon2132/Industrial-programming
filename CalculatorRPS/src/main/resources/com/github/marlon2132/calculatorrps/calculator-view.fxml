<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.github.marlon2132.calculatorrps.CalculatorController">

    <top>
        <HBox spacing="6">
            <padding>
                <Insets top="8" right="8" bottom="0" left="8"/>
            </padding>
            <Label text="Выражение:"/>
            <TextField fx:id="inputField" HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="6">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>

            <HBox spacing="6">
                <Label text="RPN:"/>
                <TextField fx:id="rpnField" editable="false" HBox.hgrow="ALWAYS"/>
            </HBox>

            <HBox spacing="6">
                <Label text="Результат:"/>
                <TextField fx:id="resultField" editable="false" HBox.hgrow="ALWAYS"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="8" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>
            <Button fx:id="clearBtn" text="Очистить" onAction="#onClear"/>
            <Button fx:id="computeBtn" text="Вычислить" onAction="#onCompute"/>
        </HBox>
    </bottom>
</BorderPane>
